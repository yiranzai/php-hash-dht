{
    "name": "yiranzai/hash-dht",
    "type": "library",
    "description": "PHP Distributed Hash Table",
    "keywords": [
        "yiranzai",
        "hash-dht"
    ],
    "homepage": "https://github.com/yiranzai/php-hash-dht",
    "license": "MIT",
    "authors": [
        {
            "name": "yiranzai",
            "email": "wuqingdzx@gmail.com",
            "homepage": "https://blog.yiranzai.cn",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.1",
        "ext-fileinfo": "*",
        "ext-json": "*",
        "yiranzai/dht": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=7.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Yiranzai\\Dht\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yiranzai\\Dht\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
